(if
  (and
    (is (application_name) 'ArchWizard')
    (is (window_class) 'Roxterm'))
  (begin
    (undecorate)
    (maximize)
    (skip_tasklist)
    (skip_pager)))

(if
  (and
    (is (application_name) 'emacs')
    (is (window_class) 'Emacs'))
  (begin
    (undecorate)
    (maximize)
    (skip_tasklist)
    (skip_pager)))

(if
  (is (window_class) 'Firefox')
  (begin
    (undecorate)
    (maximize)
    (skip_tasklist)
    (skip_pager)))
