set guifont=Monospace\ Regular\ 9
set lines=43
set columns=84
set novisualbell
set noerrorbells
set guioptions-=T                       " removes the toolbar at the top.
set guioptions-=m                       " removes the menubar at the top.
set guioptions-=r                       " removes the scrollbar at the right.
set guioptions-=R                       " removes the scrollbar at the right.
set guioptions-=l                       " removes the scrollbar at the left.
set guioptions-=L                       " removes the scrollbar at the left.
set guioptions-=e                       " adds a text-based tabline at the top.
