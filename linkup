#!/bin/bash

rm -rf ~/.bashrc
ln -s "$PWD"/bashrc ~/.bashrc

rm -rf ~/.bash_profile
ln -s "$PWD"/bash_profile ~/.bash_profile

rm -rf ~/.inputrc
ln -s "$PWD"/inputrc ~/.inputrc

rm -rf ~/.gvimrc
ln -s "$PWD"/gvimrc ~/.gvimrc

rm -rf ~/.vimrc
ln -s "$PWD"/vimrc ~/.vimrc

rm -rf ~/.tmux.conf
ln -s "$PWD"/tmux.conf ~/.tmux.conf

rm -rf ~/.gitignore
ln -s "$PWD"/gitignore ~/.gitignore

rm -rf ~/.gitconfig
ln -s "$PWD"/gitconfig ~/.gitconfig

rm -rf ~/.R
ln -s "$PWD"/R ~/.R

rm -rf ~/.Rprofile
ln -s "$PWD"/Rprofile ~/.Rprofile

rm -rf ~/scripts
ln -s "$PWD"/scripts ~/scripts

if [[ "$1" == "--vundle" ]]; then
  rm -rf ~/.vim
  mkdir -p ~/.vim/colors
  ln -s "$PWD"/mustang.vim ~/.vim/colors/mustang.vim
  mkdir -p ~/.vim/bundle
  git clone 'https://github.com/gmarik/vundle' ~/.vim/bundle/vundle
  vim +BundleInstall
  ln -s "$(readlink -m "$PWD"/snippets)" ~/.vim
  rm ~/.vim/bundle/LaTeX-Suite-aka-Vim-LaTeX/ftplugin/latex-suite/templates/{beamer,article}.tex
  ln -s "$PWD"/latex-templates/article.tex ~/.vim/bundle/LaTeX-Suite-aka-Vim-LaTeX/ftplugin/latex-suite/templates/article.tex
  ln -s "$PWD"/latex-templates/beamer.tex ~/.vim/bundle/LaTeX-Suite-aka-Vim-LaTeX/ftplugin/latex-suite/templates/beamer.tex
fi

[[ ! -d ~/.fonts ]] && mkdir -p ~/.fonts && cp "$PWD"/Monaco_Linux.ttf ~/.fonts

exit 0
