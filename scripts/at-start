#!/bin/bash

/usr/local/bin/batterymon &
/usr/bin/nm-applet &
trayer --expand true --transparent true --alpha 255 --edge top \
  --align right --expand true --SetDockType true --widthtype request &
synclient TouchpadOff=1 &
/usr/bin/conky -c "$HOME"/.conkyrc/conky_launchpad &
/usr/bin/artha &
/usr/bin/gnome-terminal &

sleep 1s && zenity --info \
  --title 'Fortune cookie for the cookie monster!' \
  --text "$(fortune -a)"

exit 0
