# For multiline code blocks, use the pre tag.
def code2Pre(line):
    if ('<code>' in line) and ('</code>' not in line):
        return line.replace('<code>', '<pre>')
    if ('</code>' in line) and ('<code>' not in line):
        return line.replace('</code>', '</pre>')
    return line

html = gfm.markdown(buf.read())
html = '\n'.join([code2Pre(line) for line in html.split('\n')])


try:
    css = sys.argv[2]
except IndexError:
    css = cssGH
else:
    if css == 'solarlight':
        css = cssSolLight
    elif css == 'solardark':
        css = cssSolDark
    else:
        css = cssGH

template = '''<html>\n<head>\n<style>\n{css}\n</style>\n</head>\n<body>\n''' + \
           '''{html}\n</body>\n</html>\n'''
print(template.format(css=css, html=html))
