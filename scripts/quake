#!/bin/bash

ISOPEN=$(wmctrl -l | grep ArchWizard | grep 0)
if [[ $ISOPEN == "" ]]; then
  gnome-terminal --profile='archwizard' &&
  wmctrl -r 'ArchWizard' -b add,fullscreen &&
  wmctrl -a 'ArchWizard'
fi

ISFOCUSED=$(xdotool getwindowname $(xdotool getwindowfocus))
if [[ $ISFOCUSED != "ArchWizard" ]]; then
  wmctrl -r 'ArchWizard' -b remove,below
  wmctrl -R 'ArchWizard'
else
  wmctrl -r 'ArchWizard' -b add,below
fi

exit 0
